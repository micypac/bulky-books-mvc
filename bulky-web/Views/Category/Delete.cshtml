@model Category

<form action="" method="post">
  @* 
    This is not necessary since variable used is Id.
    If anything else like categoryId, then have to declare this.
  *@
  <input asp-for="Id" hidden>
  
  <div class="border p-3 mt-4">
    <div class="row pb-2">
      <h2 class="text-primary">Delete Category</h2>
      <hr>
    </div>

    

    <div class="mb-3 row p-1">
      <label asp-for="Name" class="p-0">Category Name</label>
      <input asp-for="Name" class="form-control" disabled>
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
      <label asp-for="DisplayOrder" class="p-0">Display Order</label>
      <input asp-for="DisplayOrder" class="form-control" disabled>
      <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>

    <div class="row">
      <div class="col-6 col-md-3">
        <button type="submit" class="btn btn-danger form-control">Delete</button>
      </div>
      <div class="col-6 col-md-3">
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
      </div>
    </div>
  </div>
</form>