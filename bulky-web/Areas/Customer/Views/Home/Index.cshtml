@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var prod in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@prod.ImageUrl" class="card-img-top rounded" style="height: 300px;" />

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@prod.Title</p>
                                <p class="card-title text-warning text-center">@prod.Author</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @prod.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    As low as:
                                    <span>
                                        @prod.Price100.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="py-3">
                            <a asp-action="Details" asp-route-prodId="@prod.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
