@model Product

<div class="card mt-4">
  <div class="card-header ml-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-primary py-2">Delete Product</h2>  
      </div>
    </div>
  </div>

  <div class="card-body p-4">
    <form class="row" method="post">
      @* 
        This is not necessary since variable used is Id.
        If anything else like ProductId, then have to declare this.
      *@
      <input asp-for="Id" hidden>

      <div class="border p-3">
        <div class="form-floating py-2 col-12">
          <input asp-for="Title" class="form-control border-0 shadow" disabled>
          <label asp-for="Title" class="ms-2">Title</label>
        </div>

        <div class="form-floating py-2 col-12">
          <textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
          <label asp-for="Description" class="ms-2">Description</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="ISBN" class="form-control border-0 shadow" disabled>
          <label asp-for="ISBN" class="ms-2">ISBN</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Author" class="form-control border-0 shadow" disabled>
          <label asp-for="Author" class="ms-2">Author</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="ListPrice" class="form-control border-0 shadow" disabled>
          <label asp-for="ListPrice" class="ms-2">List Price</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Price" class="form-control border-0 shadow" disabled>
          <label asp-for="Price" class="ms-2">Price</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Price50" class="form-control border-0 shadow" disabled>
          <label asp-for="Price50" class="ms-2">Wholesale Price for 50</label>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Price100" class="form-control border-0 shadow" disabled>
          <label asp-for="Price100" class="ms-2">Wholesale Price for 100</label>
        </div>

        <div class="row pt-2">
          <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
          </div>
        </div>

      </div>
    </form>
  </div>
</div>

